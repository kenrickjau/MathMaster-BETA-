<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/background_sky"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10sp"
        android:shadowColor="#d7713200"
        android:shadowDx="8"
        android:shadowDy="8"
        android:shadowRadius="3"
        android:fontFamily="@font/kids_magazine"
        android:text="MATH MASTER"
        android:textAlignment="center"
        android:textColor="#FFC300"
        android:textSize="40sp" />

    <Button
        android:id="@+id/home_start"
        android:layout_width="180sp"
        android:layout_height="60sp"
        android:layout_marginTop="20sp"
        android:fontFamily="@font/kids_magazine"
        android:text="start"
        android:backgroundTint="#70BD2D"
        android:shadowColor="#d7713200"
        android:shadowDx="8"
        android:shadowDy="8"
        android:shadowRadius="3"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:onClick="startGame"/>

    <Button
        android:id="@+id/home_settings"
        android:layout_width="180sp"
        android:layout_height="60sp"
        android:layout_marginTop="20sp"
        android:fontFamily="@font/kids_magazine"
        android:text="Settings"
        android:backgroundTint="#2D57BD"
        android:shadowColor="#d7713200"
        android:shadowDx="8"
        android:shadowDy="8"
        android:shadowRadius="3"
        android:textSize="15sp"
        android:textColor="@color/white"/>

    <Button
        android:id="@+id/home_exit"
        android:layout_width="180sp"
        android:layout_height="60sp"
        android:layout_marginTop="20sp"
        android:fontFamily="@font/kids_magazine"
        android:text="Exit"
        android:backgroundTint="#8D8989"
        android:shadowColor="#d7713200"
        android:shadowDx="8"
        android:shadowDy="8"
        android:shadowRadius="3"
        android:textSize="15sp"
        android:textColor="@color/white"/>

</LinearLayout>